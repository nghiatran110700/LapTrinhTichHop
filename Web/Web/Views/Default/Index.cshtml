                            @*<i class="page-icon fas fa-angle-right"></i>*@
                            <i class=" page-icon fas fa-info-circle"></i>
                        </a>
                        <a href="@Url.Action("Delete", "Default", new { id = item.idProduct })" class="filter__page-btn ">
                            @*<i class="page-icon fas fa-angle-right"></i>*@
                            <i class="page-icon fas fa-trash-alt"></i>
                        </a>
                    </div>
