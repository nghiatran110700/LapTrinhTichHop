            <th class="text-left">Category</th>
            <th class="text-left">

            </th>
        </tr>

    </thead>
    @foreach (var item in Model)
    {

        <tbody class="table-hover">
            <tr>
                <td class="text-left">
                    @Html.DisplayFor(modelItem => item.nameProduct)
                </td>
                <td class="text-left">
                    @Html.DisplayFor(modelItem => item.price)
                </td>
                <td class="text-left">
